@model IEnumerable<CarDealer.Services.Models.Cars.CarWithPartsModel>

@{
    ViewData["Title"] = "CarsWithParts";
}

<h2>CarsWithParts</h2>

<table class="table table-striped table-bordered table-responsive table-hover">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TravelledDistance)
                </th>
                <th>
                    Parts
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelledDistance)
            </td>
            <td>
               <ul>
                        @foreach (var part in item.Parts)
                        {
                            <li>@part.Name: @part.Price.ToString("C2")</li>
                        }
               </ul>
            </td>
        </tr>
}
    </tbody>
</table>
