@model CarFormModel


<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Make" class="control-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TravelledDistance" class="control-label"></label>
        <input asp-for="TravelledDistance" class="form-control" />
        <span asp-validation-for="TravelledDistance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartsIds" class="control-label"></label>
        <select asp-for="PartsIds" asp-items="Model.Parts" multiple class="form-control"></select>
        <span asp-validation-for="PartsIds" class="text-danger"></span>
        <p>* Use Ctrl to select multiple Parts</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Car" class="btn btn-default" />
    </div>
</form>